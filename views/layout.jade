                                                                //-         .progress-bar(role="progressbar" ng-style="{width:profileImageUploader.progress + '%'}" style="width:0%;")
                                                                .profilePictureHorizonalScroll.frame
                                                                        .profilePictureThumbsWidget
                                                                                .thumbnailWrapper.marginBottom10(ng-repeat='profileImg in profileImagesUploaded')

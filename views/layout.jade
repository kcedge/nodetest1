                                                                h2 Lets add some pictures to your profile to express YOU
                                                                h7 Please upload a picture of you or something you love 
                                                        br
                                                        
                                                        div.row
                                                                input.btn.btn-primary#selectedFile(type="file" name="profileImage" nv-file-select uploader="profileImageUploader" style="display:none")
                                                                input.btn.btn-primary(value="Upload Profile Image" ng-click="profileImageUploadClicked()")
                                                                
                                                                div.row.marginBottom10
                                                                        div(ng-repeat="item in profileImageUploader.queue")

                                                                                button.btn-xs(ng-click="item.remove()") remove {{item.file.name}}   

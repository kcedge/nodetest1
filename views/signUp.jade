extends layout
append body
	.container.pageController(ng-controller="signUpController" style="margin:0 auto;width:90%;max-width:966px;")
		+alert-i-warning("Signing up with Music Production Helper allows you to view your profile page.  With a profile on mphelper.io you can: Contribute to the Tip Library, comment on tips, view your loved tips, link your soundcloud account and download samples from the Samples Library")
		a(href='/profile/kcedge') Sample profile
		#signInWrapper.formInputWrapper

			.titleBannerDiv()
				h3
					#titleName= title
			form#signInDetails(action="/signUp" method = "post")

				+label-info("Username:")
				br
				input#usernameInput.form-control(name="username" ng-model="signUpUsername")
				+label-info("Email:")
				br
				input#emailInput.form-control(name="email" ng-model="signUpEmail")
				+label-info("Password:")
				br
				input#passWordInput.form-control(type="password" name="password" ng-model="signUpPassword")
				+label-info("Password Confirm:")
				input#signUpConfirmInput.form-control(type="password" ng-model="signUpPasswordConfirm")
				#btnSignInSubmit.keyButton(ng-click="signUpSubmitClicked()")
					button.btn.btn-primary(type="submit")
						span Sign Up
				#signInLinkWrapper
					a#signInLink(href="/signIn")
						span Already a member? Sign In			
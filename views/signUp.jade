extends layout
append body
	.container(ng-controller="signUpController")
		#signInWrapper
			.titleBannerDiv()
				#titleName= title
			form#signInDetails(action="/signUp" method = "post")
				+label-info("Username:")
				br
				input#usernameInput.form-control(name="username" ng-model="signUpUsername")
				+label-info("Email:")
				br
				input#emailInput.form-control(name="email" ng-model="signUpEmail")
				+label-info("Password:")
				br
				input#passWordInput.form-control(type="password" name="password" ng-model="signUpPassword")
				+label-info("Password Confirm:")
				input#signUpConfirmInput.form-control(type="password" ng-model="signUpPasswordConfirm")
				#btnSignInSubmit.keyButton(ng-click="signUpSubmitClicked()")
					button.btn.btn-primary(type="submit")
						span Sign Up
				#signInLinkWrapper
					a#signInLink(href="/signIn")
						span Already a member? Sign In			
extends layout
append body
	.container(ng-controller="signInController")
		#signInWrapper
			.titleBannerDiv()
				#titleName= title				
				div.alert#note #{messages}
			form#signInDetails(action="/signIn" method = "post")
				+label-info("Username:")
				br
				input#signInInput.form-control(name="username")
				+label-info("Password:")
				br
				input#passWordInput.form-control(type="password" name="password")
				#btnSignInSubmit.keyButton
					button.btn.btn-primary(type="submit")
						span Sign In
				#signInLinkWrapper
					a#signInLink(href="/signUp")
						span Not a member? Sign Up
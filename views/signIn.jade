extends layout
append body
	.container.pageController(ng-controller="signInController" style="margin:0 auto;width:90%;max-width:966px;")
		#signInWrapper.formInputWrapper
			.titleBannerDiv()
				h3
					#titleName= title				
				//div.alert#note #{messages}
				#redirect(ng-hide='true' ng-model='redirect')= redirect

			//#soundCloudWrapper(ng-click='signInWithSoundCloud()')
			//	img(src='http://connect.soundcloud.com/2/btn-connect-sc-s.png')
			form#signInDetails()
				+label-info("Username:")
				br
				input#signInInput.form-control(name="username" ng-model='signInUsername')
				+label-info("Password:")
				br
				input#passWordInput.form-control(type="password" name="password" ng-model='signInPassword')
				#btnSignInSubmit.keyButton
					button.btn.btn-primary(type="submit" ng-click='signInClicked()')
						span Sign In
				#signInLinkWrapper
					a#signInLink(href="/signUp")
						span Not a member? Sign Up